<%- include('../layout') %>
<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-11 col-lg-10">
      <div class="card shadow-lg border-0 mb-4">
        <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between">
          <h4 class="mb-0"><i class="bi bi-bag me-2"></i> المنتجات</h4>
          <a href="/products/add" class="btn btn-success rounded-pill px-4"><i class="bi bi-plus-circle"></i> إضافة منتج</a>
        </div>
        <div class="card-body p-4">
          <div class="table-responsive">
            <table class="table table-bordered align-middle text-center">
              <thead class="table-light">
                <tr><th>الاسم</th><th>السعر</th><th>الكمية</th><th>التفاصيل</th><th>الصورة</th><th>إجراءات</th></tr>
              </thead>
              <tbody>
                <% products.forEach(p => { %>
                  <tr>
                    <td><%= p.name %></td>
                    <td><%= p.price %></td>
                    <td><%= p.quantity %></td>
                    <td><%= p.details %></td>
                    <td><% if (p.image) { %><img src="<%= p.image %>" width="60" class="rounded shadow-sm"><% } %></td>
                    <td>
                      <a href="/products/edit/<%= p._id %>" class="btn btn-warning btn-sm rounded-pill px-3 mb-1"><i class="bi bi-pencil"></i> تعديل</a>
                      <form action="/products/delete/<%= p._id %>" method="POST" style="display:inline">
                        <button class="btn btn-danger btn-sm rounded-pill px-3"><i class="bi bi-trash"></i> حذف</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
