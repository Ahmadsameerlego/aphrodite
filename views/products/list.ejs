<%- include('../layout') %>
<h2>المنتجات</h2>
<a href="/products/add" class="btn btn-success mb-3">إضافة منتج</a>
<table class="table table-bordered">
  <thead>
    <tr><th>الاسم</th><th>السعر</th><th>الكمية</th><th>التفاصيل</th><th>الصورة</th><th>إجراءات</th></tr>
  </thead>
  <tbody>
    <% products.forEach(p => { %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.price %></td>
        <td><%= p.quantity %></td>
        <td><%= p.details %></td>
        <td><% if (p.image) { %><img src="<%= p.image %>" width="60"><% } %></td>
        <td>
          <a href="/products/edit/<%= p._id %>" class="btn btn-warning btn-sm">تعديل</a>
          <form action="/products/delete/<%= p._id %>" method="POST" style="display:inline">
            <button class="btn btn-danger btn-sm">حذف</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
